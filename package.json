{
  "name": "linter-jscs",
  "version": "4.2.2",
  "main": "src/linter-jscs",
  "description": "Linter plugin for JavaScript, using JSCS",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-jscs.git"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "tdd": "fsmonitor -d src -s -q apm test",
    "test": "apm test",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.1.0",
    "globule": "1.2.1",
    "jscs": "3.0.7",
    "object-assign": "4.1.1"
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "activationHooks": [
    "language-babel:grammar-used",
    "language-html:grammar-used",
    "language-javascript-jsx:grammar-used",
    "language-javascript:grammar-used",
    "language-jsx:grammar-used"
  ],
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/travis-cli": "7.5.2",
    "@semantic-release/apm-config": "6.0.1",
    "husky": "1.3.1",
    "semantic-release": "15.13.3",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "fsmonitor": "0.2.4",
    "jasmine-fix": "1.3.1",
    "temp": "0.9.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
}
